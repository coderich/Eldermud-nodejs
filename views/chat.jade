html(lang="en")
    head
        title ElderMud
        script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js")
        script(type="text/javascript", src="/socket.io/socket.io.js")
        script(type="text/javascript", src="/chat.js")
    body
        #heading
            h1 Welcome to ElderMud!
        #content(style="width:500px")
            p(style="float:left;width:100%")
                textarea(id="console", readonly="readonly", style="width:79%;height:400px")
            p(style="float:right;width:100%")
                textarea(id="who", readonly="readonly", style="width:19%;height:400px")
            p(style="clear:both")
                input(id="cmd", type="text", style="width:100%")
        #footer
            p
                span#client_count 0 connected clients